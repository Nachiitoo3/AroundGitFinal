<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.NiceStart"
        tools:targetApi="31">
        <activity
            android:name=".Nopeople"
            android:exported="true">
        </activity>

        <activity
            android:name=".Splash"
            android:exported="true"
            android:parentActivityName=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" /> <!-- Esto es para cuando se abra la app ejecutar lo primero -->

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:exported="true"
            android:parentActivityName=".Login"
            android:theme="@style/Theme.NiceStart.Register" />
        <activity
            android:name=".Login"
            android:exported="true"></activity>
        <activity
            android:name=".LoginConstraining"
            android:exported="false" />
        <activity
            android:name=".Main"
            android:exported="true"
            android:theme="@style/Theme.NiceStart.Register" />
    </application>

</manifest>